package Tp1;

public class Employe {
	private String nom;
	private String id;
	private int  ca;
	private long ;
	
	
	public Employe(String nom, String id,String ca,double commis) {
		this.nom=nom;
		this.id=id;
		this.ca=ca;
	}
	
	public double commission() {
		long commis;
		if(ca > 80000) {
			commis=(ca*25)/100;
		}
		else {
			commis=(ca*100)/100;
		}
		return commis;
	}
	
	public double salaire() {
		long salaire;
		int nh;
		salaire=nh*15000;
		long sal;
		sal =commis + salaire;
		
		return salaire;
	}
	
	public void afficher() {
		System.out.println("Le nom est"+nom+"l identifiant est"+id+"le salaire"+salaire);
	}

}
